{
  "name": "checklist-backend",
  "version": "2.0.0",
  "description": "Backend Node.js para Checklist App - Multi-ambiente (local/staging/production)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:local": "NODE_ENV=local node server.js",
    "start:staging": "NODE_ENV=staging node server.js",
    "start:production": "NODE_ENV=production node server.js",
    "pm2:staging": "pm2 start server.js --name checklist-backend-staging --env staging",
    "pm2:production": "pm2 start server.js --name checklist-backend --env production"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
